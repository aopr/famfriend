<p id="notice"><%= notice %></p>


<h1>Travel Xperts</h1>

<p> Where I Want To Travel </p>
<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @go.reverse.each do |travel| %>
      <tr>
        <td><%= travel.location %></td>
        <td><img src="<%= travel.image_url %>" height="20%"></td>

            <%if !current_user.nil? && current_user.id == travel.user_id%>
                <td><%= link_to 'Show', travel %></td>
                <td><%= link_to 'Edit', edit_travel_path(travel) %></td>
                <td><%= link_to 'Destroy', travel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br>
<p> Where I've Traveled </p>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @been.reverse.each do |travel| %>
      <tr>
        <td><%= travel.location %></td>
        <td><img src="<%= travel.image_url %>" height="20%"></td>

           <%if !current_user.nil? && current_user.id == travel.user_id%>
                <td><%= link_to 'Show', travel %></td>
                <td><%= link_to 'Edit', edit_travel_path(travel) %></td>
                <td><%= link_to 'Destroy', travel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%end%>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

