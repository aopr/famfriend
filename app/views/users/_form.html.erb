<div id="login_section">
  <%= form_for user, :html => {:class => 'center-nav'} do |f| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name, class: "btn-white" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :email, class: "btn-white" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "btn-white" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "btn-white" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit 'Register', class: "btn btn-success btn-white" %>

    </div>
  <% end %>
</div>
