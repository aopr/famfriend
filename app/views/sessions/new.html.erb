<div class="container">
  <h1 class="btn-white text-center">Login</h1>

  <%= form_tag '/login' do %>

  <div class="field">
    <%= label_tag(:email, "Email", class: "btn-white") %>
    <%= text_field_tag :email, nil, class: "form-control" %>
  </div>


  <div class="field">
    <%= label_tag :password, "Password", class: "btn-white"%>
    <%= password_field_tag :password, nil, class: "form-control" %>
  </div>
  <%= submit_tag "Login", class: "btn btn-success btn-white" %>

  <% end %>
</div>
